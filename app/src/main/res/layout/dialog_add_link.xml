<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="330dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:elevation="20dp"
    android:background="@drawable/bg_dialog_rounded">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="100dp"
        android:padding="10dp"
        android:clipToPadding="false"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btn_instagram_link"
            android:background="@drawable/icon_instagram_link"
            android:layout_gravity="center"
            android:elevation="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btn_twitter_link"
            android:background="@drawable/icon_twitter_link"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btn_etc_link"
            android:elevation="10dp"
            android:background="@drawable/icon_etc_link"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/link_icon"
            android:background="@drawable/icon_link"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <EditText
            android:id="@+id/link"
            android:hint="링크를 입력하시오"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/pretendardregular"
            android:layout_width="220dp"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/addLinkBtn"
            android:layout_width="52dp"
            android:layout_height="30dp"
            android:fontFamily="@font/pretendardregular"
            android:text="저장"
            android:background="@drawable/btn_add_link"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>



</LinearLayout>