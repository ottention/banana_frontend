<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.ChartCardDetailFragment">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <Button
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:background="@drawable/icon_arrow_exit"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:fontFamily="@font/montserrat_bold"
                android:textSize="16dp"
                android:text="김하나님의 명함"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.9"/>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="330dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Business Card"
                        android:textSize="14dp"
                        android:fontFamily="@font/pretendardmedium"
                        android:textColor="@color/black" />

                    <View
                        android:layout_marginTop="2dp"
                        android:layout_width="96dp"
                        android:background="#66000000"
                        android:layout_height="1dp"/>

                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/btn_heart"
                    android:layout_width="16.67dp"
                    android:layout_height="15.29dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/favorite_selected"/>

                <TextView
                    android:id="@+id/number_of_like"
                    android:fontFamily="@font/pretendardregular"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24"/>


            </LinearLayout>

            <FrameLayout
                android:layout_width="350dp"
                android:layout_gravity="center"
                android:layout_height="170dp">

                <FrameLayout
                    android:orientation="vertical"
                    android:id="@+id/detailed_card"
                    android:layout_width="300dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    android:elevation="15dp"
                    android:visibility="visible"
                    android:background="@color/white"
                    app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                </FrameLayout>

                <FrameLayout
                    android:orientation="vertical"
                    android:id="@+id/detailed_card_back"
                    android:layout_width="300dp"
                    android:layout_height="160dp"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:elevation="15dp"
                    app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                </FrameLayout>

            </FrameLayout>



        </LinearLayout>


        <LinearLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_marginBottom="100dp"
            android:background="#F9F9F9"
            android:orientation="vertical"
            android:paddingTop="15dp">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="방명록 작성"
                    android:fontFamily="@font/pretendardmedium"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <View
                    android:layout_width="74dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_height="40dp">

                    <EditText
                        android:id="@+id/comment_area"
                        android:layout_width="277dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:fontFamily="@font/pretendardregular"
                        android:hint="방명록은 최대 24자까지 작성 가능합니다."
                        android:maxLength="24"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/btn_add_comment"
                        android:layout_marginRight="10dp"
                        android:layout_width="48dp"
                        android:layout_height="28dp"
                        android:background="@drawable/btn_add"/>
                </LinearLayout>



            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/comment_rv_area"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                 />

        </LinearLayout>



    </LinearLayout>
</layout>
