<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".fragment.CardDetailFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:background="@drawable/icon_arrow_exit"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:fontFamily="@font/montserrat_bold"
            android:textSize="16dp"
            android:text="Card 01"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.9"/>
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="330dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Business Card"
                    android:textSize="14dp"
                    android:fontFamily="@font/pretendardmedium"
                    android:textColor="@color/black" />

                <View
                    android:layout_marginTop="2dp"
                    android:layout_width="96dp"
                    android:background="#66000000"
                    android:layout_height="1dp"/>

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/card_delete_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/icon_delete"/>
            <Button
                android:id="@+id/btn_card_edit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/icon_edit"/>


        </LinearLayout>

        <FrameLayout
            android:layout_width="340dp"
            android:layout_gravity="center"
            android:layout_height="170dp">

            <FrameLayout
                android:orientation="vertical"
                android:id="@+id/detailed_card"
                android:layout_width="300dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:elevation="15dp"
                android:visibility="visible"
                android:background="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            </FrameLayout>

            <FrameLayout
                android:orientation="vertical"
                android:id="@+id/detailed_card_back"
                android:layout_width="300dp"
                android:layout_height="160dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:background="@color/white"
                android:elevation="15dp"
                app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            </FrameLayout>

        </FrameLayout>



    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_marginBottom="100dp"
        android:background="#F3F3F3"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="133dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keywords"
                android:textColor="#66000000"
                android:textSize="14dp" />

            <View
                android:layout_width="65dp"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:background="#66000000" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:overScrollMode="never"
                app:layoutManager="com.google.android.flexbox.FlexboxLayoutManager"
                app:flexWrap="wrap">

            </androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <LinearLayout
                android:layout_marginBottom="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="최근 방명록"
                        android:textColor="#66000000"
                        android:textSize="14dp" />

                    <View
                        android:layout_width="70dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="3dp"
                        android:background="#66000000" />

                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="바로가기"
                        android:textColor="#66000000"
                        android:textSize="14dp" />

                    <Button
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/icon_arrow_forward"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/pretendardregular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2022.15.03"
                    android:textSize="12dp"
                    android:textColor="#66000000" />
                
                <TextView
                    android:textColor="@color/black"
                    android:fontFamily="@font/pretendardregular"
                    android:gravity="center"
                    android:layout_width="350dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/pretendardregular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2022.15.03"
                    android:textSize="12dp"
                    android:textColor="#66000000" />

                <TextView
                    android:textColor="@color/black"
                    android:fontFamily="@font/pretendardregular"
                    android:gravity="center"
                    android:layout_width="350dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/white"/>

            </LinearLayout>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout></layout>